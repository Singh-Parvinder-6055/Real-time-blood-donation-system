<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <h3 class="text-center mb-4 admin-title">All Verification Requests</h3>

  <% if (!verifications.length) { %>
    <p class="text-center empty-state">
      <i>You're all caught up! ðŸŽ‰  
No verification requests pending right now.
</i>
    </p>
  <% } %>

  <div class="row g-4">
    <% for (verification of verifications) { %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card verification-card h-100">
          <div class="card-body">
            <h4 class="card-title">
              <%= verification.organization.name %>
            </h4>

            <p class="card-text text-muted small mb-1">
              Created On
            </p>
            <p class="card-text date-text">
              <%= verification.createdAt.toString().split(" ").slice(0,4).join(" ") %>
            </p>

            <a href="/verification/<%= verification._id %>"
               class="btn review-btn mt-3">
               Review Request
            </a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

