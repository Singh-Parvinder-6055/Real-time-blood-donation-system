<% layout("layouts/boilerplate") %>
<body>
<div class="row">
    <div class="col-8 offset-3">
        <h3><%=verification.organization.name%></h3>
    </div>
<div class="col-6 offset-3">
        <div class="verification-card">
                <a href="<%=verification.document.documentUrl%>"><img src="<%=verification.document.documentUrl%>" id="show-img" class="card-img-top show-img" alt="Document Image"></a>
            <div class="card-body">
                 
                <p class="card-text"><i><b>Type of Organization:</b> <%=verification.organization.organizationType%></i></p><br>
                
                <p class="card-text"><i><b>Created on:</b> </i><%=verification.createdAt.toString().split(" ").slice(0,4).join(" ")%></p><br>
                
                <p class="card-text"><b>Location:</b> <%=verification.organization.city%></p><br>
                <p class="card-text"><b>Country:</b> <%=verification.organization.country%></p>  <br>
                    
                
                </p>
            </div>
    <div class="show-btns mt-4">
        <div class="col-md-3 p-0">
            <form action="/verify/<%=verification._id%>?_method=PATCH" method="post">
                <button type="submit" class="btn btn-success w-100">Verify</button>
            </form>
        </div>
        <div class="col-md-3 offset-1 p-0">
            <button type="button" class="btn btn-danger w-100" id="toggleReject">Reject</button>
        </div>        
    </div>

<div id="rejectionSection" style="display: none;" class="mt-4 border p-3 rounded bg-light">
    <form action="/reject/<%=verification._id%>?_method=PATCH" method="POST" id="rejectForm">
        <div class="mb-3">
            <label for="rejectionReason" class="form-label"><b>Reason for Rejection:</b></label>
            <textarea name="rejectionReason" id="rejectionReason" class="form-control" rows="3" placeholder="Explain why the document was rejected..."></textarea>
            <div id="error-msg" class="text-danger small mt-1" style="display: none;">Please provide a reason before submitting.</div>
        </div>
        <button type="submit" class="btn btn-danger">Submit Rejection</button>
        <button type="button" class="btn btn-dark " id="cancelReject">Cancel</button>
    </form>
</div>


        </div>

       

    </div>
</div>
</body>