<%layout ("layouts/boilerplate")%>
<div class="dashboard-container container-fluid mt-4">
    <div class="row row-cols-xs-1 row-cols-sm-1 row-cols-md-2">
        <div class="col-5">
            <h2>Donor Dashboard</h2>
            
        </div>
        <form class="col-12 col-md-6 col-lg-5 d-flex needs-validation" method="POST" action="/changePincode?_method=PATCH" role="search" novalidate>
              <input class="form-control me-2" type="search" name="pincode" placeholder="Change Pincode to see emergencies at different locations" aria-label="Search" required/>
              <button class="btn btn-outline-success" type="submit">Submit</button>
          </form>
    </div>
    
    <p class="blur"><i>Track your activity in this dashboard</i></p>
    <h5 class="mb-4">Hey <%=currUser.username%>  &#x1F44B;</h5>

    <ul class="nav nav-tabs shadow-sm" id="adminTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="camps-tab" data-bs-toggle="tab" data-bs-target="#camps" type="button">Participation in Donation Camps</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="emergency-tab" data-bs-toggle="tab" data-bs-target="#emergency" type="button">Emergency Helps</button>
        </li>
       
    </ul>

    <div class="tab-content border border-top-0 p-4 bg-white shadow-sm" id="adminTabContent">
        
        <div class="tab-pane fade show active" id="camps" role="tabpanel">
            <h4>Camps in which you donated blood</h4>
            <%if(user.camps.length){%>

            <table class="table">
                <thead class="table-light">
                <tr>
                    <th class="text-center">Camp Name</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Location</th>
                    <th class="text-center">Contact</th>
                    <th class="text-center">Camp Status</th>
                    <th class="text-center">Donation Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let camp of user.camps) { %>
                    <% if (camp && camp.camp) { %>
                <tr>
                    <td class="text-center"><%= camp.camp.title %></td>
                    <td class="text-center"><%= camp.camp.startDateTime.toDateString() %></td>
                    <td class="text-center"><%= camp.camp.city %></td>
                    <td class="text-center"><%= camp.camp.organizer.phone %></td>
                    <td class="text-center">
                        <% if(camp.camp.status==="ongoing") { %>
                                <span class="badge bg-success">Ongoing</span>
                            <% } else if(camp.camp.status==="upcoming") { %>
                                <span class="badge bg-warning">Upcoming</span>
                        <% } else { %>
                                <span class="badge bg-danger">Completed</span>
                        <% } %>
                    </td>
                    <td class="text-center">
                            <% if(camp.donated) { %>
                                <span class="badge bg-success">Donated</span>
                            <% } else { %>
                                <span class="badge bg-warning">Donation Pending</span>
                            <% } %>
                    </td>
                    <td class="text-center">
                            <%if(!camp.donated){%>
                                <form action="/camp/cancelParticipation/<%= camp.camp._id %>/?_method=PATCH" method="POST" style="display:inline;">
                                    <button class="btn btn-sm btn-outline-success">Cancel registration</button>
                                </form>
                            <%}%>
                            
                    </td>
                </tr>
                <% } %>
                <% } %>
            </tbody>
                </table>
                <%}else{%>
                    <div class="alert alert-secondary text-center">
                         You have not donated blood in any donation camp yet.
                    </div>
                <%}%>
        </div>
       
        
        <div class="tab-pane fade" id="emergency" role="tabpanel">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Blood you donated in emergencies</h4>
        
    </div>

    <% if (user.emergencies.length) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-warning">
                    <tr>
                        <th class="text-center">Patient/Case</th>
                        <th class="text-center">Blood Group</th>
                        <th class="text-center">Units</th>
                        <th class="text-center">Hospital</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let req of user.emergencies) { %>
                        <% if (req && req.emergency) { %>
                    <tr class="align-middle">
                        <td class="text-center"><strong><%= req.emergency.patient.username %></strong></td>
                        <td class="text-center"><span class="badge bg-danger"><%= req.emergency.bloodGroup %></span></td>
                        <td class="text-center"><%= req.emergency.unitsRequired %> Units</td>
                        <td class="text-center"><%= req.emergency.requestedBy.username %></td>
                        <td class="text-center">
                            <% if(req.donated) { %>
                                <span class="badge bg-success">Donated</span>
                            <% } else { %>
                                <span class="badge bg-warning">Donation Pending</span>
                            <% } %>
                        </td>
                        <td class="text-center">
                            <%if(!req.donated){%>
                                <form action="/emergency/cancelFulfill/<%= req.emergency._id %>/?_method=PATCH" method="POST" style="display:inline;">
                                    <button class="btn btn-sm btn-outline-success">Cancel</button>
                                </form>
                            <%}%>
                            
                        </td>
                    </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-secondary text-center">
            You have not helped in any emergency yet.
        </div>
    <% } %>
</div>
      

    </div>
</div>
    




