<%layout ("layouts/boilerplate")%>
<div class="dashboard-container container-fluid mt-4">
    <div class="row">
        <h2 class="col-sm-4">Organization Dashboard</h2>
        <%if(user.verification && user.verification.verificationStatus=="approved"){%>
                    <span class="badge col-sm-2 mt-2 verification rounded-pill text-bg-success">Verified <i class="fa-regular fa-circle-check"></i></span>
        <%}%>
        <%if(user.verification && user.verification.verificationStatus=="rejected"){%>
                    <span class="badge col-sm-2 mt-2 verification-status rounded-pill text-bg-danger">Verification Request Rejected <i class="fa-solid fa-ban"></i></span>
        <%}%>
        <%if(user.verification && user.verification.verificationStatus=="pending"){%>
                    <span class="badge col-sm-2 mt-2 verification-status rounded-pill text-bg-warning">Verification Pending      <i class="fa-solid fa-hourglass-end"></i></span>
        <%}%>
        <%if(!user.verification){%>
                    <span class="badge col-sm-2 mt-2 verification-status rounded-pill text-bg-warning">Verification Request Not Raised</span>
        <%}%>
    </div>
    <p class="blur"><i>Track your activity in this dashboard</i></p>
   
        
                <h5 class="mb-4">Hey <%=currUser.username%>  &#x1F44B;</h5>
                
    <ul class="nav nav-tabs shadow-sm" id="adminTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="camps-tab" data-bs-toggle="tab" data-bs-target="#camps" type="button">My Camps</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="emergency-tab" data-bs-toggle="tab" data-bs-target="#emergency" type="button">Emergency Requirements</button>
        </li>
        
    </ul>

    <div class="tab-content border border-top-0 p-4 bg-white shadow-sm" id="adminTabContent">
        
        <div class="tab-pane fade show active" id="camps" role="tabpanel">
            <h4>Camps Organized by Me</h4>
            <%if(user.camps.length){%>
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                <tr>
                    <th class="text-center">Camp Name</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Location</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Donors Registered</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
                </thead>
            <tbody>
                <% for(let camp of user.camps) { %>
                    <% if (camp && camp.camp) { %>
                <tr>
                    <td class="text-center"><%= camp.camp.title %></td>
                    <td class="text-center"><%= camp.camp.startDateTime.toDateString() %></td>
                    <td class="text-center"><%= camp.camp.city %></td>
                    <td class="text-center">
                        <% if(camp.camp.status==="ongoing") { %>
                                <span class="badge bg-success">Ongoing</span>
                            <% } else if(camp.camp.status==="upcoming") { %>
                                <span class="badge bg-warning">Upcoming</span>
                        <% } else { %>
                                <span class="badge bg-danger">Completed</span>
                        <% } %>
                    </td>
                    <td class="text-center">
                                 <%if(camp.camp.registeredDonors.length){%> 
                                    <table class="table align-center">                                        
                                    <%for(donor of camp.camp.registeredDonors){%>
                                        <tr class="align-center">
                                            <td class="text-center"><%= donor.donor.username %></td>
                                            <td class="text-center"><%= donor.donor.phone %></td>
                                            <%if(!donor.isCollected){%>
                                             <td class="text-center">
                                                
                                                    <form method="POST" action="camp/collected/<%=donor.donor._id%>/<%=camp.camp._id%>?_method=PATCH">
                                                        <button class="blood-received"type="submit" title="mark as collected">Mark as collected</button>
                                                    </form>
                                                
                                                
                                             </td>
                                             <td class="text-center">                                                
                                                    <form action="/camp/denyRegistration/<%= camp.camp._id %>/<%=donor.donor._id%>/?_method=PATCH" method="POST" style="display:inline;">
                                                        <button class="deny-response">Deny Registration</button>
                                                    </form>                                                
                            
                                            </td>
                                            <%}%>
                                        
                                        </tr>
                                        <br>
                                            
                                    <%}%>                                        
                                    </table>
                                     <%}%>
                                </td>

                    <td class="text-center ">
                        <a class="small-Blue-btn" href="/camp/edit/<%=camp.camp._id%>">Edit</a>    
                    </td> 
                    <td class="text-center">
                        <form method="post" action="/camp/<%=camp.camp._id%>?_method=DELETE">
                            <button class="small-Blue-btn " type="submit">Delete</button>
                        </form>
                    </td>   
                </tr>
                <% } %>
                <% } %>
            </tbody>
            </table>
        </div>
                <%}else{%>
                    <div class="alert alert-secondary text-center">
                         You did not organize any camp.
                    </div>
                <%}%>
        </div>
       
        
        <div class="tab-pane fade" id="emergency" role="tabpanel">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>My Emergency Requests</h4>
        
    </div>

    <% if (user.emergencies.length) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-warning">
                    <tr>
                        <th class="text-center">Patient/Case</th>
                        <th class="text-center">Blood Group</th>
                        <th class="text-center">Units</th>
                        <th class="text-center">Hospital</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Fulfilled By</th>                        
                        <th class="text-center">Action</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% for(let req of user.emergencies) { %>
                        <% if (req && req.emergency) { %>
                    <tr class="align-middle">
                        <td class="text-center"><strong><%= req.emergency.patient.username %></strong></td>
                        <td class="text-center"><span class="badge bg-danger"><%= req.emergency.bloodGroup %></span></td>
                        <td class="text-center"><%= req.emergency.unitsRequired %> Units</td>
                        <td class="text-center"><%= req.emergency.requestedBy.username %></td>
                        <td class="text-center">
                            <% if(req.emergency.isFulfilled) { %>
                                <span class="badge bg-success">Fulfilled</span>
                            <% } else { %>
                                <span class="badge bg-warning">Open</span>
                            <% } %>
                        </td>
                       
                            <td class="text-center">
                                 <%if(req.emergency.fulfilledBy.length){%> 
                                    <table class="table align-center">                                        
                                    <%for(donor of req.emergency.fulfilledBy){%>
                                        <tr class="align-center">
                                            <td class="text-center"><%= donor.donor.username %></td>
                                            <td class="text-center"><%= donor.donor.phone %></td>
                                            <%if(!donor.isCollected){%>
                                             <td class="text-center">
                                                
                                                    <form method="POST" action="emergency/fulfilled/<%=donor.donor._id%>/<%=req.emergency._id%>?_method=PATCH">
                                                        <button class="blood-received"type="submit" title="mark as collected">Mark as collected</button>
                                                    </form>
                                            </td>
                                            <td>
                                                    <form action="/emergency/denyFulfillRequest/<%= req.emergency._id %>/<%=donor.donor._id%>/?_method=PATCH" method="POST" style="display:inline;">
                                                        <button class="deny-response ">Deny Response</button>
                                                    </form>
                                                
                                                
                                             </td>
                                            <%}%>
                                        
                                        </tr>
                                        <br>
                                            
                                    <%}%>                                        
                                    </table>
                                     <%}%>
                                </td>
                        
                        
                        <td class="text-center change-emrgency">
                          <form method="POST" action="/emergency/<%=req.emergency._id%>?_method=DELETE">
                            <button class="small-Blue-btn"type="submit">Delete</button>
                          </form></td>
                    </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-secondary text-center">
            No active emergency requests created by you.
        </div>
    <% } %>
</div>

        
    </div>
</div>
    




