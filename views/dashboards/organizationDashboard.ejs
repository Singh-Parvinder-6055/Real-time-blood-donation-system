<%layout ("layouts/boilerplate")%>
<div class="dashboard-container">
    <div class="row">
        <h2 class="col-sm-4">Organization Dashboard</h2>
        <%if(user.verification && user.verification.verificationStatus=="approved"){%>
                    <span class="badge col-sm-2 mt-2 verification rounded-pill text-bg-success">Verified <i class="fa-regular fa-circle-check"></i></span>
        <%}%>
        <%if(user.verification && user.verification.verificationStatus=="rejected"){%>
                    <span class="badge col-sm-2 mt-2 verification-status rounded-pill text-bg-danger">Verification Request Rejected <i class="fa-solid fa-ban"></i></span>
        <%}%>
        <%if(user.verification && user.verification.verificationStatus=="pending"){%>
                    <span class="badge col-sm-2 mt-2 verification-status rounded-pill text-bg-warning">Verification Pending      <i class="fa-solid fa-hourglass-end"></i></span>
        <%}%>
        <%if(!user.verification){%>
                    <span class="badge col-sm-2 mt-2 verification-status rounded-pill text-bg-warning">Verification Request Not Raised</span>
        <%}%>
    </div>
    <p class="blur"><i>Track your activity in this dashboard</i></p>
    <div class="container-fluid mt-4">
        
                <h5 class="mb-4">Hey <%=currUser.username%>  &#x1F44B;</h5>
                
    <ul class="nav nav-tabs shadow-sm" id="adminTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="camps-tab" data-bs-toggle="tab" data-bs-target="#camps" type="button">My Camps</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="emergency-tab" data-bs-toggle="tab" data-bs-target="#emergency" type="button">Emergency Requirements</button>
        </li>
        
    </ul>

    <div class="tab-content border border-top-0 p-4 bg-white shadow-sm" id="adminTabContent">
        
        <div class="tab-pane fade show active" id="camps" role="tabpanel">
            <h4>Camps Organized by Me</h4>
            <%if(user.camps.length){%>
        <div class="table-responsive">
            <table class="table">
                <thead class="table-light">
                <tr>
                    <th>Camp Name</th>
                    <th>Date</th>
                    <th>Location</th>
                </tr>
                </thead>
            <tbody>
                <% for(let camp of user.camps) { %>
                <tr>
                    <td><%= camp.title %></td>
                    <td><%= camp.startDateTime.toDateString() %></td>
                    <td><%= camp.city %></td>
                </tr>
                <% } %>
            </tbody>
            </table>
        </div>
                <%}else{%>
                    <div class="alert alert-secondary text-center">
                         You did not organize any camp.
                    </div>
                <%}%>
        </div>
       
        
        <div class="tab-pane fade" id="emergency" role="tabpanel">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>My Emergency Requests</h4>
        
    </div>

    <% if (user.emergencies.length) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-warning">
                    <tr>
                        <th class="text-center">Patient/Case</th>
                        <th class="text-center">Blood Group</th>
                        <th class="text-center">Units</th>
                        <th class="text-center">Hospital</th>
                        <th class="text-center">Status</th>
                        <!-- <th class="text-center">Actions</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% for(let req of user.emergencies) { %>
                    <tr class="align-middle">
                        <td class="text-center"><strong><%= req.patient.username %></strong></td>
                        <td class="text-center"><span class="badge bg-danger"><%= req.bloodGroup %></span></td>
                        <td class="text-center"><%= req.unitsRequired %> Units</td>
                        <td class="text-center"><%= req.requestedBy.username %></td>
                        <td class="text-center">
                            <% if(req.isFulfilled) { %>
                                <span class="badge bg-success">Fulfilled</span>
                            <% } else { %>
                                <span class="badge bg-warning">Open</span>
                            <% } %>
                        </td>
                        
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-secondary text-center">
            No active emergency requests created by you.
        </div>
    <% } %>
</div>

        
    </div>
</div>
    
</div>



