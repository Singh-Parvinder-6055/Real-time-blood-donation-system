<% layout("layouts/boilerplate") %>

<section class="signup-hero">
  <div class="container">

    <!-- Info strip -->
    <div class="info-strip">
      ðŸš‘ Emergency Registration
    </div>

    <!-- Heading -->
    <div class="signup-heading">
      <h1>Every Drop</h1>
      <h1>Matters</h1>
      <p>
        Register patients to quickly connect with nearby blood donors
      </p>
    </div>

    <!-- Card -->
    <div class="signup-card">
      <h3 class="mb-4 text-center">Register as a Patient</h3>

      <form method="post" action="/signup" class="needs-validation" novalidate>

        <input name="user[role]" value="patient" hidden>

        <div class="row">
        <div class="mb-3">
          <label class="form-label" for="name">Full Name</label>
          <input class="form-control" id="name" name="user[name]" required>
        </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" id="username" name="user[username]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label"for="password">Password</label>
            <input type="password" id="password" class="form-control" name="user[password]" required>
          </div>
        </div>

        <div class="row">
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input type="email" id="email" class="form-control" name="user[email]" required>
        </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label" for="phone">Phone</label>
            <input type="number" id="phone" class="form-control" name="user[phone]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label" for="age">Age</label>
            <input type="number" id="age" class="form-control" name="user[age]" min="1" required>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label" for="country">Country</label>
            <input id="country" class="form-control" name="user[country]" required>
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label" for="city">City</label>
            <input id="city" class="form-control" name="user[city]" required>
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label" for="pincode">Pincode</label>
            <input id="pincode" class="form-control" name="user[pincode]" required>
          </div>
        </div>

        <label for="patientBloodGroup" class=" form-label mt-3 mb-2">Patient Blood Group</label>

        <div class="blood-grid">
          <% ["A+","A-","B+","B-","AB+","AB-","O+","O-"].forEach(bg => { %>
            <label class="blood-pill">
              <input id="patientBloodGroup" type="radio" name="user[patientBloodGroup]" value="<%= bg %>" required>
              <span><%= bg %></span>
            </label>
          <% }) %>
        </div>

        <button class="cta-btn mt-4 w-100">
          Register Patient
        </button>

      </form>
    </div>

  </div>
</section>
