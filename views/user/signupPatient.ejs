<% layout("layouts/boilerplate") %>

<section class="signup-hero">
  <div class="container">

    <!-- Info strip -->
    <div class="info-strip">
      ðŸš‘ Emergency Registration
    </div>

    <!-- Heading -->
    <div class="signup-heading">
      <h1>Every Drop</h1>
      <h1>Matters</h1>
      <p>
        Register patients to quickly connect with nearby blood donors
      </p>
    </div>

    <!-- Card -->
    <div class="signup-card">
      <h3 class="mb-4 text-center">Register as a Patient</h3>

      <form method="post" action="/signup" novalidate>

        <input name="user[role]" value="patient" hidden>

        <div class="mb-3">
          <label>Full Name</label>
          <input class="form-control" name="user[name]" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Username</label>
            <input class="form-control" name="user[username]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label>Password</label>
            <input type="password" class="form-control" name="user[password]" required>
          </div>
        </div>

        <div class="mb-3">
          <label>Email</label>
          <input type="email" class="form-control" name="user[email]" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Phone</label>
            <input type="number" class="form-control" name="user[phone]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label>Age</label>
            <input type="number" class="form-control" name="user[age]" min="1" required>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Country</label>
            <input class="form-control" name="user[country]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label>City</label>
            <input class="form-control" name="user[city]" required>
          </div>
        </div>

        <label class="mt-3 mb-2">Patient Blood Group</label>

        <div class="blood-grid">
          <% ["A+","A-","B+","B-","AB+","AB-","O+","O-"].forEach(bg => { %>
            <label class="blood-pill">
              <input type="radio" name="user[patientBloodGroup]" value="<%= bg %>" required>
              <span><%= bg %></span>
            </label>
          <% }) %>
        </div>

        <button class="cta-btn mt-4 w-100">
          Register Patient
        </button>

      </form>
    </div>

  </div>
</section>
