<% layout("layouts/boilerplate") %>

<section class="signup-hero">
  <div class="container">

    <!-- Info strip (same as homepage) -->
    <p class="info-strip">
      üè• Associate With Us
    </p>

    <!-- Heading -->
    <div class="signup-heading">
      <h1>Together</h1>
      <h1>We Save Lives</h1>
      <p>
        Register your organization to manage blood requests and camps
      </p>
    </div>

    <!-- Card -->
    <div class="signup-card">
      <h3 class="mb-4 text-center">Register as an Organization</h3>

      <form method="post" action="/signup" novalidate>

        <input name="user[role]" value="organization" hidden>

        <div class="mb-3">
          <label>Organization Name</label>
          <input class="form-control" name="user[name]" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Username</label>
            <input class="form-control" name="user[username]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label>Password</label>
            <input type="password" class="form-control" name="user[password]" required>
          </div>
        </div>

        <div class="mb-3">
          <label>Email</label>
          <input type="email" class="form-control" name="user[email]" required>
        </div>

        <div class="mb-3">
          <label>Phone</label>
          <input type="number" class="form-control" name="user[phone]" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Country</label>
            <input class="form-control" name="user[country]" required>
          </div>
          <div class="col-md-6 mb-3">
            <label>City</label>
            <input class="form-control" name="user[city]" required>
          </div>
        </div>

        <label class="mt-3 mb-2">Organization Type</label>

        <div class="org-type-grid">
          <label class="org-pill">
            <input type="radio" name="user[organizationType]" value="hospital" required>
            <span>üè• Hospital</span>
          </label>

          <label class="org-pill">
            <input type="radio" name="user[organizationType]" value="blood-bank" required>
            <span>ü©∏ Blood Bank</span>
          </label>

          <label class="org-pill">
            <input type="radio" name="user[organizationType]" value="ngo" required>
            <span>ü§ù NGO</span>
          </label>
        </div>

        <button class="cta-btn mt-4 w-100">
          Register Organization
        </button>

      </form>
    </div>

  </div>
</section>
