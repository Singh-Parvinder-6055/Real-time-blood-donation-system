
<% layout("layouts/boilerplate") %>

<section class="signup-hero">
  <div class="container">

   
    <p class="info-strip">
      ❤️ Become a Lifesaver Today
    </p>

  
    <div class="signup-heading">
      <h1>Every Drop</h1>
      <h1>Saves Lives</h1>
      <p>
        Register as a donor and help someone in an emergency
      </p>
    </div>

    <!-- Form Card -->
    <div class="signup-card">
      <h3 class="mb-4 text-center">Register as a Donor</h3>

      <form method="post" action="/signup" class="needs-validation" novalidate>

        <input name="user[role]" value="donor" hidden>

        <div class="row">
          <div class="col-md-12 mb-3">
            <label class="form-label" for="name">Full Name</label>
            <input class="form-control" name="user[name]" id="name" required>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" name="user[username]" id="username" required>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label"for="password">Password</label>
            <input type="password" class="form-control" name="user[password]" id="password" required>
          </div>
        </div>


        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input type="email" class="form-control" name="user[email]" id="email" required>
        </div>

        <div class="row">
          
          <div class="col-md-6 mb-3">
            <label class="form-label" for="age">Age</label>
            <input type="number" class="form-control" id="age" name="user[age]" min="16" required>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label" for="phone">Phone</label>
            <input type="number" class="form-control" name="user[phone]" id="phone" required>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label" for="country">Country</label>
            <input id="country" class="form-control" name="user[country]" required>
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label" for="city">City</label>
            <input id="city" class="form-control" name="user[city]" required>
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label" for="pincode">Pincode</label>
            <input id="pincode" class="form-control" name="user[pincode]" required>
          </div>
        </div>

        <label for="bloodGroup" class=" form-label mt-3 mb-2">Blood Group</label>

        <div class="blood-grid">
          <% ["A+","A-","B+","B-","AB+","AB-","O+","O-"].forEach(bg => { %>
            <label class="blood-pill">
              <input id="bloodGroup" type="radio" name="user[bloodGroup]" value="<%= bg %>" required>
              <span><%= bg %></span>
            </label>
          <% }) %>
        </div>

        <button class="cta-btn mt-4 w-100">
           Register & Save Lives
        </button>

      </form>
    </div>

  </div>
</section>
