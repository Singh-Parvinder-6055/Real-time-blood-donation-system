<% layout("layouts/boilerplate") %>

<div class="row justify-content-center mt-5">
  <div class="col-md-7 col-lg-6">

    <div class="emergency-card">
      <h2 class="text-center mb-4">Create Emergency</h2>

      <form method="POST" action="/emergency" novalidate>

        <div class="mb-3">
          <label class="form-label">Patient Username</label>
          <input class="form-control" name="emergency[patient]" type="text" placeholder="Enter patient username" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Reason for Emergency</label>
          <textarea class="form-control" rows="3" maxlength="100"
            name="emergency[emergencyReason]" placeholder="Brief reason..." required></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Blood Group Required</label>
          <select class="form-select" name="emergency[bloodGroup]" required>
            <option value="">Select Blood Group</option>
            <option>A+</option><option>A-</option>
            <option>B+</option><option>B-</option>
            <option>AB+</option><option>AB-</option>
            <option>O+</option><option>O-</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Urgency Level</label>
          <div class="urgency-group">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="emergency[urgencyLevel]" value="low" required>
              <label class="form-check-label low">Low</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="emergency[urgencyLevel]" value="medium">
              <label class="form-check-label medium">Medium</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="emergency[urgencyLevel]" value="high">
              <label class="form-check-label high">High</label>
            </div>
          </div>
        </div>

        <div class="mb-4">
          <label class="form-label">Units Required</label>
          <input type="number" class="form-control" name="emergency[unitsRequired]" min="1" required>
        </div>

        <button class="btn emergency-btn w-100">Create Emergency</button>
      </form>
    </div>

  </div>
</div>
