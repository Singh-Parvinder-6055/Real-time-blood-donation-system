<% layout("layouts/boilerplate") %>
<body>
<div class="row">
    <div class="col-6 offset-3">
        
        <form method="post" action="/emergency" 
        class="needs-validation" novalidate>
            
            <div class="mb-3">
                <label class="form-label" for="patient">
                    Enter Patient Username
                </label>
                <input class="form-control" id="patient" 
                name="emergency[patient]"type="text">
            </div>
            
            <div class="mb-3">
            <select class="form-select" name=emergency[bloodGroup] 
            aria-label="Default select example" required>
                <option selected>Select Blood Group</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                
            </select>
            </div>
            
            <div class="mb-4 col">
                <p><b>Urgency Level</b></p>
                <div class="form-check col">

                    <input class="form-check-input" type="radio" 
                    name="emergency[urgencyLevel]" 
                    id="low" value="low" required>

                    <label class="form-check-label" for="low">
                     Low
                    </label>
                </div>

                <div class="form-check col">

                    <input class="form-check-input" 
                    type="radio" name="emergency[urgencyLevel]" 
                    id="medium" value="medium" required>

                    <label class="form-check-label" for="medium">
                     Medium
                    </label>
                </div>
                <div class="form-check col">
                    <input class="form-check-input" type="radio" 
                    name="emergency[urgencyLevel]" id="high" 
                    value="high" required>
                    <label class="form-check-label" for="high">
                     High
                    </label>
                </div>
            <div class="mt-3 mb-3">
                <label type="number" class="form-label"
                for="unitsRequired"><b>Units Required</b></label>
                <input type="number" class="form-control" id="unitsRequired" 
                name="emergency[unitsRequired]" required>

            </div>
            <button class="btn btn-success">Submit</button>
        </form>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<script src="/app.js"></script>
</div>
</body>
