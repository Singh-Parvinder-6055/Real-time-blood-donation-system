<% layout("layouts/boilerplate") %>    
    


<body class="bg-white">
    <!-- Main Hero Section Only -->
    <main class="container py-5 py-md-6">
        <div class="row align-items-center g-4 g-md-5">
            <!-- Left Column - Text Content -->
            <div class="col-12 col-md-6 text-center text-md-start">
                <h1 class="display-4 fw-bold mb-3 lh-1">
                    Every Drop <span class="text-danger">Saves Lives</span>
                </h1>
                <p class="fs-5 text-muted mb-4">
                    "BloodConnect is a real-time emergency blood donor matching platform."
                </p>
                
                <div class="d-flex  flex-column flex-sm-row gap-3 justify-content-center justify-content-md-start mb-5">
                    <button class="btn  btn-danger btn-lg px-4 py-2 no-cursor">
                        Find Donors Now
                    </button>
                    <button class=" btn btn-outline-danger btn-lg px-4 py-2 nor-cursor">
                        I Want to Donate
                    </button>
                </div>

                <div class="row text-center g-4">
                    <div class="col-4">
                        <div class="fs-2 fw-bold"><%=totalActiveDonors%>+</div>
                        <div class="text-muted small">Active Donors</div>
                    </div>
                    <div class="col-4">
                        <div class="fs-2 fw-bold"><%=totalPartnerHospitals%>+</div>
                        <div class="text-muted small">Partner Hospitals</div>
                    </div>
                    <div class="col-4">
                        <div class="fs-2 fw-bold">24/7</div>
                        <div class="text-muted small">Emergency Response</div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Illustration -->
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <img 
                    src="images/illustration.jpeg" 
                    alt="BloodConnect App Illustration" 
                    class="illustration-image img-fluid"
                />
            </div>
        </div>
    </main>

    
</body>