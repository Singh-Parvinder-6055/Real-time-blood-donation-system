<% layout("layouts/boilerplate") %>

<div class="row justify-content-center mt-5">
  <div class="col-md-7 col-lg-6">

    <div class="camp-card">
      <h2 class="text-center mb-4">Organize a Camp</h2>

      <form method="POST" action="/camp" class="needs-validation" novalidate>

        <div class="mb-3">
          <label for="title" class="form-label">Camp Title</label>
          <input type="text" class="form-control" id="title" name="camp[title]" placeholder="e.g. Summer Drive" required>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" id="country" name="camp[country]" required>
          </div>

          <div class="mb-3 col-md-4">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" id="city" name="camp[city]" required>
          </div>

          <div class="mb-3 col-md-4">
            <label for="pincode" class="form-label">Pincode</label>
            <input type="text" class="form-control" id="pincode" name="camp[pincode]" required>
          </div>
        </div>

        <div class="mb-3">
          <label for="startDateTime" class="form-label">Start Date & Time</label>
          <input type="datetime-local" class="form-control" id="startDateTime" name="camp[startDateTime]" required>
        </div>

        <div class="mb-3">
          <label for="endDateTime" class="form-label">End Date & Time</label>
          <input type="datetime-local" class="form-control" id="endDateTime" name="camp[endDateTime]" required>
        </div>

        <button class="btn camp-btn w-100 mt-3">Create Camp</button>
      </form>
    </div>

  </div>
</div>
